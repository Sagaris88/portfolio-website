<script>
    var statesData = {{{mapOutputJson}}};
    var countryData = {{{mapOutputJsonCountry}}}

    var mbAttr = 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
        '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
        'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
        mbUrl = 'https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw';


    // Map Layers
	var light = L.tileLayer(mbUrl, {
		maxZoom: 18,
		attribution: mbAttr,
		id: 'mapbox/light-v9',
		tileSize: 512,
		zoomOffset: -1
	});


    // States Data
	var states = L.geoJson(statesData);

    function getColorStates(sales) {
    return  sales > 24  ? '#98002B' :
            sales > 22  ? '#b10026' :
            sales > 20  ? '#CA0D21' :
            sales > 18  ? '#e31a1c' :
            sales > 16  ? '#F03423' :
            sales > 14  ? '#fc4e2a' :
            sales > 12  ? '#FD6E33' :
            sales > 10  ? '#fd8d3c' :
            sales > 8   ? '#FEA044' :
            sales > 6   ? '#feb24c' :
            sales > 4   ? '#FEC661' :
            sales > 2   ? '#fed976' :
            sales >= 1  ? '#ffeda0' :
            sales >= 0  ? '#ffffff' :
                          '#ffffff' ;
    }

    function styleStates(feature) {
    return {
        fillColor: getColorStates(feature.properties.sales),
        weight: 1,
        opacity: 1,
        color: 'white',
        dashArray: '3',
        fillOpacity: 0.7
    }}

    L.geoJson(statesData, { style: styleStates }).addTo(states);


    // Country Data
	var country = L.geoJson(countryData);

    function getColorCountry(sales) {
    return  sales > 48  ? '#98002B' :
            sales > 44  ? '#b10026' :
            sales > 40  ? '#CA0D21' :
            sales > 36  ? '#e31a1c' :
            sales > 32  ? '#F03423' :
            sales > 28  ? '#fc4e2a' :
            sales > 24  ? '#FD6E33' :
            sales > 20  ? '#fd8d3c' :
            sales > 16  ? '#FEA044' :
            sales > 12  ? '#feb24c' :
            sales > 8   ? '#FEC661' :
            sales > 4   ? '#fed976' :
            sales >= 1  ? '#ffeda0' :
            sales >= 0  ? '#ffffff' :
                          '#ffffff' ;
    }

    function styleCountry(feature) {
    return {
        fillColor: getColorCountry(feature.properties.sales),
        weight: 1,
        opacity: 1,
        color: 'white',
        dashArray: '3',
        fillOpacity: 0.7
    }}

    L.geoJson(countryData, { style: styleCountry }).addTo(country);


    // Base Map
    var map = L.map('mapid', {
		center: [37.8, -96],
		zoom: 3,
        layers: [light, states]
	});


    // Layers
    var baseLayers = {
		"Light": light
	};

    var overlays = {
		"States": states,
        "Country": country
	};
    
	L.control.layers(baseLayers, overlays).addTo(map);


</script>