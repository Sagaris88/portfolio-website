    function getColor(d) {
    return d > 12 ? '#b10026' :
           d > 10  ? '#e31a1c' :
           d > 8  ? '#fc4e2a' :
           d > 6  ? '#fd8d3c' :
           d > 4   ? '#feb24c' :
